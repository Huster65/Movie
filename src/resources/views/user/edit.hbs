<div class="mt-4">

    <h3 style="color: aliceblue;">Cập nhật người dùng</h3>

    <form method="POST" action="/user/{{user._id}}?_method=PUT">

        <div class="mb-3">
            <label for="description" style="color: aliceblue;">Tên người dùng</label>
            <input value="{{user.name}}" type="text" class="form-control" id="username" name="username" >
        </div>
        <div class="mb-3">
            <label for="description" style="color: aliceblue;">Mật khẩu</label>
            <input value="{{user.password}}" type="text" class="form-control" id="description" name="description" >
        </div>
        <div class="mb-3">
            <label for="description" style="color: aliceblue;">Ví tiền</label>
            <input value="{{user.price}}" type="text" class="form-control" id="videoId" name="videoId" >
        </div>
        
        <button type="submit" class="btn btn-primary btn-add-movie">Lưu Lại</button>

    </form>

</div>